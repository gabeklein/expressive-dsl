{
    "compilerOptions": {
        "baseUrl": "src/",
        "outDir": "lib/",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}