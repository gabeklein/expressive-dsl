{
	"name": "expressive-react",
	"version": "0.9.0-alpha",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
	"description": "An alternative syntax for powerful react constructs using less code",
	"scripts": {
		"start": "concurrently \"npm:watch-core\" \"npm:watch-react\"",
		"postinstall": "yarn --cwd tests install",
		"watch:core": "yarn watch --prefix packages/plugin-core",
		"watch:react": "yarn watch --prefix packages/plugin-react",
		"clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
	},
	"keywords": [
		"react",
		"expressive",
		"syntax"
	],
	"license": "MIT",
	"devDependencies": {
		"lerna": "^3.13.4"
	},
	"dependencies": {
		"concurrently": "^4.1.0"
	}
}